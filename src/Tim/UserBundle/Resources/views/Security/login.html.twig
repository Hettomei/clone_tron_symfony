{% extends '::base.html.twig' %}
{% block body %}
<div class="container">

  {% if error %}
  <div class="alert alert-danger">
    {{ error.message }}
  </div>
  {% endif %}

  <form class="form-inline" role="form" action="{{ url('login_check') }}" method="post">
    <div class="form-group">
      <label class="sr-only" for="username">Pseudo</label>
      <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Pseudo"/>
    </div>
    <div class="form-group">
      <label class="sr-only" for="password">Password</label>
      <input type="password" class="form-control" name="_password" id="exampleInputPassword2" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-default">Se connecter</button>
  </form>

</div>
{% endblock %}
